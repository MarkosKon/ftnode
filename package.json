{
  "name": "@markoskon/ftnode",
  "description": "A script that runs a list of font files through varLib.instancer and/or pyftsubset.",
  "version": "0.2.0",
  "license": "MIT",
  "type": "module",
  "repository": "MarkosKon/ftnode",
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "src/**/*.mjs",
    "**/*.json"
  ],
  "keywords": [
    "typography",
    "fonts",
    "subset",
    "fonttools",
    "cli",
    "command-line"
  ],
  "author": {
    "name": "Markos Konstantopoulos",
    "url": "https://markoskon.com"
  },
  "bin": {
    "ftnode": "./src/ftnode.mjs"
  },
  "scripts": {
    "clean": "rm -r ./output",
    "dump-help": "zx ./src/ftnode.mjs --help > help.txt"
  },
  "dependencies": {
    "lodash.merge": "^4.6.2",
    "progress": "^2.0.3",
    "yargs": "^17.0.1",
    "zx": "^5.0.0"
  },
  "devDependencies": {
    "@types/lodash.merge": "^4.6.6",
    "@types/node": "^16.7.6",
    "@types/progress": "^2.0.5",
    "@types/yargs": "^17.0.2",
    "typescript": "^4.3.5"
  }
}
